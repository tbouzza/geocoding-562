<p id="notice"><%= notice %></p>

<div class="container">

  <div class="d-flex justify-content-between align-items-center">
    <h1 class='text-bold'>Flats</h1>
    <%= link_to new_flat_path, class: 'btn btn-primary' do %>
      <i class="fas fa-plus-square"></i>
      New Flat
    <% end %>
  </div>

  <h4>Serach for your favorite flat</h4>
  <input type="text" id="flat_address">

  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card m-3 p-3">
        <h4><%= flat.name %></h4>
        <p><%= flat.address %></p>
        <div class="d-flex justify-content-end align-items-center">
          <%= link_to 'Show', flat, class: 'btn btn-primary mr-2' %>
          <%= link_to 'Edit', edit_flat_path(flat), class: 'btn btn-warning mr-2' %>
          <%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>






  <div id="map"
       style="width: 100%; height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

</div>













